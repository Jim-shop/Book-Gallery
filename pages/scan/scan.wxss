#container {
	background-color: #2196F3;
	height: 100vh;
	color: white;
	text-align: center;
	align-items: center;
	display: flex;
	flex-flow: column nowrap;
	justify-content: space-around;
}

#control {
	height: 50vh;
	width: 80vw;
	margin: 0 auto;
	display: flex;
	flex-flow: column nowrap;
	justify-content: space-around;
	align-items: center;
	background-color: #1680e0;
	border-radius: 50rpx;
}

#nfc-logo {
	font-size: 200rpx;
}

#nfc-hint {
	font-size: 64rpx;
}

#or {
	opacity: 50%;
}

#debug {
	opacity: 50%;
}

#history {
	height: 30vh;
	display: flex;
	flex-flow: row wrap;
	align-items: space-around;
	justify-content: space-around;
}

.history-item {
	display: block;
	height: 50rpx;
	font-size: 30rpx;
	width: fit-content;
	padding: 10rpx 20rpx;
	margin: 20rpx;
	background-color: #4fb5ff;
	border-radius: 35rpx;
}

#inout {
	display: flex;
	flex-flow: row nowrap;
	align-items: space-around;
	justify-content: space-around;
	width: 100vw;
}
